@model IEnumerable<Songsong.Models.Song>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameSong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Singer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameSong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Singer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SongID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SongID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SongID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

